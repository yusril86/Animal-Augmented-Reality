<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:background="@drawable/bg_list">
    <ImageView
        android:id="@+id/ivHewan"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:src="@drawable/anoa"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvJudulHewan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Banteng"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/ivHewan"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold|italic"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPulauHewan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvJudulHewan"
        android:text="Jawa,,kalimntan,bali"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/ivHewan"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:maxLines="2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>